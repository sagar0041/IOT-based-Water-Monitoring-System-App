<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.sagar.iot">

    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_icon_round"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".AboutusActivity"></activity>
        <activity android:name=".AlarmActivity" />
        <activity android:name=".CardViewSecActivity" />
        <activity android:name=".ForgotActivity" />
        <activity
            android:name=".SplashActivity"
            android:clearTaskOnLaunch="false"
            android:launchMode="singleInstance">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".WaterLevelActivity" />
        <activity android:name=".WaterQualityActivity" />
        <activity android:name=".SignUpactivity" />
        <activity android:name=".LoginActivity" />
        <activity android:name=".SecurityActivity" />
        <activity android:name=".PumpActivity" />
        <activity android:name=".TutorialActivity" />
        <activity android:name=".MainActivity" />
        <activity android:name=".GraphActivity" />

        <receiver
            android:name=".MyAlarm"
            android:enabled="true"
            android:exported="true" />
    </application>

</manifest>